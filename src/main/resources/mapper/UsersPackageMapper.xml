<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.expressTracking.dao.UsersPackageDao">
    <resultMap id="userPackageMap" type="UsersPackage">
        <id column="sn" property="userU"/>
        <association column="UserUID" property="userU" select="com.expressTracking.dao.UserInfoDao.get"/>
        <association column="PackageID" property="pkg"  select="com.expressTracking.dao.TransPackageDao.get"/>
    </resultMap>

    <select id="getByUserUId" parameterType="int" resultMap="userPackageMap">
        select SN, UserUID, PackageID from userspackage where UserUID=#{userUId};
    </select>

    <insert id="insert" parameterType="UsersPackage" >
        insert into userspackage(useruid, packageid) values (#{userU.uId},#{pkg.id});
    </insert>

    <delete id="delete" parameterType="int">
        delete from userspackage where sn=#{sn};
    </delete>

</mapper>