<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.expressTracking.dao.UsersPackageDao">
    <resultMap id="userpackageMap" type="UsersPackage">
        <id column="sn" property="userU"/>
        <association property="userU" column="UserUID" select="com.expressTracking.dao.UserInfoDao.get"/>
        <association property="pkg" column="PackageID" select="com.expressTracking.dao.TransPackageDao.get"/>
    </resultMap>
    <select id="get" parameterType="int" resultMap="userpackageMap">
        select sn, useruid, packageid from userspackage where UserUID=#{id};
    </select>

    <insert id="insert" parameterType="UsersPackage" >
        insert into userspackage(useruid, packageid) values (#{userU.useruid},#{pkg.packageid});
    </insert>

    <delete id="delete" parameterType="int">
        delete from userspackage where sn=#{sn};
    </delete>

</mapper>